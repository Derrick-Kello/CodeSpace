rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read and write their own data
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      // Allow users to update their problem interaction lists, but not their role
      allow update: if request.auth != null && request.auth.uid == userId && 
                      request.resource.data.keys().hasOnly(['likedProblems', 'dislikedProblems', 'solvedProblems', 'starredProblems', 'updatedAt']);
      allow create: if request.auth != null && request.auth.uid == userId;
    }

    // Anyone can read problems, but only authenticated admin users can create/update/delete them
    match /problems/{problemId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Authenticated users can create their own submissions and read their own submissions
    match /submissions/{submissionId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
}
